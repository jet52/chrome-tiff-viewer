{
  "manifest_version": 3,
  "name": "TIFF Viewer",
  "version": "1.0.29",
  "description": "View multi-page TIFF files directly in your browser, similar to the built-in PDF viewer",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "downloads",
    "tabs",
    "webNavigation",
    "declarativeNetRequest",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["viewer/*", "lib/*", "offscreen/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
